{
  "name": "lapp",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc -p ./server",
    "start": "nodemon --ext ts --watch server/src --exec \"npm run dev:server\"",
    "test": "NODE_ENV=test mocha './server/test/**/*.test.ts'",
    "dev": "concurrently -n server,client \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "webpack-dev-server --config ./client/webpack.config.js",
    "dev:server": "ts-node --project tsconfig.json server/src/index.ts",
    "lint": "tslint -c tslint.json 'server/{src,test}/**/*.ts' --fix",
    "clean": "rm -rf ./build"
  },
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/runtime": "^7.6.3",
    "@radar/lnrpc": "^0.8.0-beta.0",
    "@reach/router": "^1.2.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-preset-react": "^6.24.1",
    "bignumber.js": "^8.0.2",
    "body-parser": "^1.18.3",
    "btc-value": "^2.1.1",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.4",
    "css-loader": "^3.2.0",
    "debug": "^3.1.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "errorhandler": "^1.5.0",
    "express": "^4.17.3",
    "express-validator": "^6.0.0",
    "global": "^4.4.0",
    "helmet": "^3.21.1",
    "html-webpack-plugin": "^3.2.0",
    "lnurl": "^0.1.0",
    "morgan": "^1.9.0",
    "node-fetch": "latest",
    "pg": "^7.12.1",
    "precss": "^4.0.0",
    "qrcode.react": "^1.0.0",
    "react": "^16.11.0",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^16.11.0",
    "react-hot-loader": "^4.12.15",
    "style-loader": "^1.0.0",
    "tailwindcss": "^1.1.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@radar/tslint-config": "^5.0.0",
    "@types/body-parser": "1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.5",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/debug": "^0.0.30",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.2",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.1",
    "concurrently": "^5.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^9.2.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.19.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.10.0",
    "typescript": "^3.0.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint",
      "git add"
    ]
  }
}
