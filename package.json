{
  "name": "ln-api-boilerplate",
  "version": "0.1.0",
  "description": "a lightning network integrated boilerplate express API",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc -p .",
    "start": "nodemon --ext ts --watch ./src --exec \"npm run dev\"",
    "test": "NODE_ENV=test mocha 'test/**/*.test.ts'",
    "dev:client": "node client/index.js",
    "dev:server": "ts-node --type-check src/index.ts",
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts' --fix",
    "clean": "rm -rf ./build"
  },
  "author": "RadarTech",
  "license": "MIT",
  "dependencies": {
    "@radar/lnrpc": "^0.8.0-beta.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "bignumber.js": "^8.0.2",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.17.1",
    "express-validator": "^6.0.0",
    "helmet": "^3.21.1",
    "morgan": "^1.9.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-hot-loader": "^4.12.15",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@radar/tslint-config": "^5.0.0",
    "@types/body-parser": "1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.5",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/debug": "^0.0.30",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.1",
    "husky": "^1.1.2",
    "lint-staged": "^9.2.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.19.1",
    "prettier": "^1.14.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.10.0",
    "typescript": "^3.0.3",
    "webpack-dev-server": "^3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint",
      "git add"
    ]
  }
}
