{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["src/**/*", "test/**/*"]
}
